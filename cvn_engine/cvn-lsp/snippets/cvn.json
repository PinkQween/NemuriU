{
  "Character Declaration": {
    "prefix": "char",
    "body": [
      "character ${1:CharacterName} {",
      "\tdisplay_name: \"${2:Display Name}\";",
      "\tname_color: 0x${3:ffffff};",
      "\tvoice_tag: \"${4:voice}\";",
      "}"
    ],
    "description": "Create a character declaration"
  },
  "Background Asset": {
    "prefix": "assetbg",
    "body": "asset bg ${1:asset_name} = \"${2:bg/asset.png}\";",
    "description": "Create a background asset"
  },
  "Sprite Asset": {
    "prefix": "assetsprite",
    "body": "asset sprite ${1:sprite_name} = \"${2:ch/sprite.png}\";",
    "description": "Create a sprite asset"
  },
  "Music Asset": {
    "prefix": "assetmusic",
    "body": "asset music ${1:music_name} = \"${2:audio/bgm/music.ogg}\";",
    "description": "Create a music asset"
  },
  "SFX Asset": {
    "prefix": "assetsfx",
    "body": "asset sfx ${1:sfx_name} = \"${2:audio/sfx/sound.wav}\";",
    "description": "Create a sound effect asset"
  },
  "Style Declaration": {
    "prefix": "style",
    "body": [
      "style ${1:style_name} {",
      "\tlayer: \"${2:actors}\";",
      "\tx: ${3:0.5}; y: ${4:0.5};",
      "\tanchor_x: ${5:0.5}; anchor_y: ${6:0.5};",
      "\tscale: ${7:1.0};",
      "\talpha: ${8:1.0};",
      "\tz: ${9:100};",
      "}"
    ],
    "description": "Create a style declaration"
  },
  "Start Block": {
    "prefix": "start",
    "body": [
      "start {",
      "\t$0",
      "}"
    ],
    "description": "Create a start block"
  },
  "Scene Command": {
    "prefix": "scene",
    "body": "scene bg ${1:background_name};",
    "description": "Set the scene background"
  },
  "Show Character": {
    "prefix": "show",
    "body": [
      "show ${1:Character} sprite ${2:sprite_name} as \"${3:id}\"",
      "\tuse ${4:style}",
      "{",
      "\t$0",
      "};"
    ],
    "description": "Show a character on screen"
  },
  "Show with Defaults": {
    "prefix": "shows",
    "body": "show ${1:Character} sprite ${2:sprite_name} as \"${3:id}\" use ${4:style};",
    "description": "Show a character with default style"
  },
  "Hide": {
    "prefix": "hide",
    "body": "hide \"${1:id}\" with ${2|fade,dissolve|}(${3:0.5});",
    "description": "Hide an element"
  },
  "Say Dialogue": {
    "prefix": "say",
    "body": "say(${1:Character}, \"${2:dialogue}\");",
    "description": "Character dialogue"
  },
  "Narrator": {
    "prefix": "narrator",
    "body": "say(Narrator, \"${1:narration}\");",
    "description": "Narrator text"
  },
  "Music Play": {
    "prefix": "music",
    "body": "music play ${1:music_name}${2: loop}${3: fade_in ${4:1.0}};",
    "description": "Play background music"
  },
  "SFX Play": {
    "prefix": "sfx",
    "body": "sfx play ${1:sfx_name};",
    "description": "Play sound effect"
  },
  "Pause": {
    "prefix": "pause",
    "body": "pause ${1:1.0};",
    "description": "Pause for duration"
  },
  "Transition Fade": {
    "prefix": "fade",
    "body": "with fade(${1:0.5});",
    "description": "Fade transition"
  },
  "Transition Dissolve": {
    "prefix": "dissolve",
    "body": "with dissolve(${1:0.5});",
    "description": "Dissolve transition"
  },
  "Native C Block": {
    "prefix": "native",
    "body": [
      "native \"c\" {",
      "\t$0",
      "}"
    ],
    "description": "Native C code block"
  },
  "Comment Header": {
    "prefix": "header",
    "body": [
      "/* =========================================================",
      "   ${1:Section Title}",
      "   ========================================================= */"
    ],
    "description": "Section header comment"
  }
}
