

{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "CVN",
    "scopeName": "source.cvn",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#native-blocks"
        },
        {
            "include": "#declarations"
        },
        {
            "include": "#commands"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.cvn",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.cvn",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "native-blocks": {
            "patterns": [
                {
                    "name": "meta.native.cvn",
                    "begin": "\\b(native)\\s+(\"c\")\\s*\\{",
                    "end": "\\}",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.native.cvn"
                        },
                        "2": {
                            "name": "string.quoted.double.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "source.c"
                        }
                    ]
                }
            ]
        },
        "declarations": {
            "patterns": [
                {
                    "name": "meta.declaration.character.cvn",
                    "begin": "\\b(character)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "end": "(?<=\\})",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.declaration.character.cvn"
                        },
                        "2": {
                            "name": "entity.name.type.character.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#property-block"
                        }
                    ]
                },
                {
                    "name": "meta.declaration.asset.cvn",
                    "match": "\\b(asset)\\s+(bg|sprite|music|sfx|ui|text)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)\\s*",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.asset.cvn"
                        },
                        "2": {
                            "name": "storage.type.asset.cvn"
                        },
                        "3": {
                            "name": "entity.name.asset.cvn"
                        },
                        "4": {
                            "name": "keyword.operator.assignment.cvn"
                        }
                    }
                },
                {
                    "name": "meta.declaration.style.cvn",
                    "begin": "\\b(style)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "end": "(?<=\\})",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.declaration.style.cvn"
                        },
                        "2": {
                            "name": "entity.name.style.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#property-block"
                        }
                    ]
                },
                {
                    "name": "meta.declaration.start.cvn",
                    "begin": "\\b(start)\\s*\\{",
                    "end": "\\}",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.declaration.start.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "$self"
                        }
                    ]
                }
            ]
        },
        "commands": {
            "patterns": [
                {
                    "name": "meta.command.scene.cvn",
                    "match": "\\b(scene)\\s+(bg)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.control.scene.cvn"
                        },
                        "2": {
                            "name": "storage.type.bg.cvn"
                        },
                        "3": {
                            "name": "variable.other.asset.cvn"
                        }
                    }
                },
                {
                    "name": "meta.command.show.cvn",
                    "begin": "\\b(show)\\s+",
                    "end": ";",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.show.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "match": "\\b(sprite|ui|text)\\b",
                            "name": "storage.type.asset.cvn"
                        },
                        {
                            "match": "\\b(as|use)\\b",
                            "name": "keyword.control.cvn"
                        },
                        {
                            "include": "#property-block"
                        },
                        {
                            "include": "#strings"
                        },
                        {
                            "include": "#identifiers"
                        }
                    ]
                },
                {
                    "name": "meta.command.hide.cvn",
                    "match": "\\b(hide)\\s+",
                    "captures": {
                        "1": {
                            "name": "keyword.control.hide.cvn"
                        }
                    }
                },
                {
                    "name": "meta.command.say.cvn",
                    "begin": "\\b(say)\\s*\\(",
                    "end": "\\)",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.say.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#strings"
                        },
                        {
                            "include": "#identifiers"
                        }
                    ]
                },
                {
                    "name": "meta.command.music.cvn",
                    "match": "\\b(music)\\s+(play|stop|pause)\\s+",
                    "captures": {
                        "1": {
                            "name": "keyword.control.music.cvn"
                        },
                        "2": {
                            "name": "keyword.control.cvn"
                        }
                    }
                },
                {
                    "name": "meta.command.sfx.cvn",
                    "match": "\\b(sfx)\\s+(play|stop)\\s+",
                    "captures": {
                        "1": {
                            "name": "keyword.control.sfx.cvn"
                        },
                        "2": {
                            "name": "keyword.control.cvn"
                        }
                    }
                },
                {
                    "name": "meta.command.with.cvn",
                    "begin": "\\b(with)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "end": "\\)",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.with.cvn"
                        },
                        "2": {
                            "name": "entity.name.function.transition.cvn"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#numbers"
                        }
                    ]
                },
                {
                    "name": "meta.command.pause.cvn",
                    "match": "\\b(pause)\\s+",
                    "captures": {
                        "1": {
                            "name": "keyword.control.pause.cvn"
                        }
                    }
                }
            ]
        },
        "property-block": {
            "patterns": [
                {
                    "name": "meta.property.cvn",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
                    "captures": {
                        "1": {
                            "name": "variable.other.property.cvn"
                        },
                        "2": {
                            "name": "punctuation.separator.cvn"
                        }
                    }
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#comments"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.cvn",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.cvn",
                            "match": "\\\\."
                        },
                        {
                            "name": "variable.interpolation.cvn",
                            "begin": "\\{",
                            "end": "\\}",
                            "patterns": [
                                {
                                    "match": "[a-zA-Z_][a-zA-Z0-9_]*",
                                    "name": "variable.other.interpolation.cvn"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.color.cvn",
                    "match": "\\b0x[0-9a-fA-F]{6}\\b"
                },
                {
                    "name": "constant.numeric.hex.cvn",
                    "match": "\\b0x[0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.float.cvn",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.cvn",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.cvn",
                    "match": "\\b(loop|fade_in|fade_out)\\b"
                },
                {
                    "name": "constant.language.boolean.cvn",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.cvn",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}