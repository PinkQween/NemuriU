{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../out/src",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
